{
  "ConnectionStrings": {
    "Configuration": "host=localhost;port=5433;database=mcp;username=mcp-auth-configuration;password=mcp-auth;",
    "Persistence": "host=localhost;port=5434;database=mcp;username=mcp-auth-persistence;password=mcp-auth;"
  },
  "Logging": {
    "Using":  ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "API.Initialization": "Information",
        "MCPDataInitializer": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithExceptionDetails"]
  }
}
